.pageTopBar {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 176rpx;
  z-index: 2147483647;
}

.pageScrollFrame {
  width: 100%;
  height: 100%;
}

/*
  顶部海报
*/

.bannerFrame {
  width: 100%;
  height: 428rpx;
}

.bannerFrame image {
  width: 100%;
  height: 100%;
}

/*
  分类菜单
*/

.navCategoriesBlock {
  width: 100%;
  height: 91rpx;
}

.navCategories {
  position: relative;
  width: 100%;
  height: 90rpx;
  background: #fff;
  border: solid 1rpx #ececec;
}

.navCategories.fiexd {
  position: fixed;
  left: 0;
  top: 176rpx;
  z-index: 2147483647;
}

.navCategories .nav {
  position: relative;
  float: left;
  width: 25%;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 800;
  color: #333;
  transition: all linear 200ms;
}

.navCategories .nav.selected {
  color: #dd4f43;
}

.navCategories .blockLine {
  position: absolute;
  bottom: 0;
  width: 52rpx;
  height: 6rpx;
  transform: translate(-50%, 0);
  background: #dd4f43;
  border-radius: 15rpx;
  transition: all linear 200ms;
}

/*
  分类内容外框
*/

.categoriesFrame {
  width: 100%;
  height: calc(100% - 90rpx - 16rpx - 176rpx);
  margin-top: 16rpx;
}

/*
  分类内容标题
*/

.categoriesFrame .titleFrame {
  position: relative;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
}

.categoriesFrame .titleFrame .title {
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #333;
}

.categoriesFrame .titleFrame .allCount {
  position: absolute;
  top: 0;
  right: 30rpx;
  font-size: 24rpx;
  color: #666;
}

/*
  可滚动列表分类内容
*/

.categoriesFrame .categoryContent.scroll {
  width: 100%;
  background: #fff;
  margin-bottom: 16rpx;
  white-space: nowrap;
}

.categoriesFrame .categoryContent .item.scroll {
  display: inline-block;
  width: 192rpx;
  font-size: 0;
  margin-right: 20rpx;
}

.categoriesFrame .categoryContent .item.scroll:first-child {
  margin-left: 30rpx;
}

.categoriesFrame .categoryContent .item.scroll:last-child {
  margin-right: 30rpx;
}

.categoriesFrame .categoryContent .item.scroll .coverFrame {
  position: relative;
  width: 192rpx;
  height: 268rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  border: solid 1rpx #c4c5c8;
}

.categoriesFrame .categoryContent .item.scroll .coverFrame .cover {
  width: 100%;
  height: 100%;
}

.categoriesFrame .categoryContent .item.scroll .coverFrame .coverShadow {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}

.categoriesFrame .categoryContent .item.scroll .coverFrame .tagsFrame {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 0;
}

.categoriesFrame .categoryContent .item.scroll .coverFrame .tagsFrame .tag {
  display: inline-block;
  height: 32rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  background: rgba(51, 51, 51, 0.7);
  color: #cfcfd2;
  margin-bottom: 2rpx;
  font-size: 20rpx;
  font-weight: 800;
}

.categoriesFrame .categoryContent .item.scroll .coverFrame .scoreOrWishText {
  position: absolute;
  display: inline-block;
  left: 12rpx;
  bottom: 12rpx;
  width: calc(100% - 24rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #efb23d;
  font-size: 24rpx;
}

.categoriesFrame .categoryContent .item.scroll .itemTitle {
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 20rpx;
}

.categoriesFrame .categoryContent .item.scroll .releaseTime {
  display: block;
  width: 100%;
  font-size: 24rpx;
  color: #333;
  margin-top: -20rpx;
  margin-bottom: 20rpx;
}

.categoriesFrame .categoryContent .item.scroll .btn {
  width: 108rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
}

.categoriesFrame .categoryContent .item.scroll .btn.btnBuy {
  background: #dd4d41;
  box-shadow: 0 10rpx 18rpx rgba(221, 77, 65, 0.2);
}

.categoriesFrame .categoryContent .item.scroll .btn.btnPresale {
  background: #599ee0;
  box-shadow: 0 10rpx 18rpx rgba(89, 158, 224, 0.2);
}

/*
  普通列表分类内容
*/

.categoriesFrame .categoryContent.list {
  width: 100%;
  background: #fff;
  margin-bottom: 16rpx;
}

.categoriesFrame .categoryContent.list .wrapper {
  width: 690rpx;
  margin: 0 auto;
}

.categoriesFrame .categoryContent .item.list {
  display: inline-block;
  width: 216rpx;
  font-size: 0;
  margin-right: 20rpx;
}

.categoriesFrame .categoryContent .item.list:nth-child(3n+0) {
  margin-right: 0;
}

.categoriesFrame .categoryContent .item.list .coverFrame {
  position: relative;
  width: 216rpx;
  height: 298rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  border: solid 1rpx #c4c5c8;
}

.categoriesFrame .categoryContent .item.list .coverFrame .cover {
  width: 100%;
  height: 100%;
}

.categoriesFrame .categoryContent .item.list .coverFrame .coverShadow {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}

.categoriesFrame .categoryContent .item.list .coverFrame .scoreOrWishText {
  position: absolute;
  display: inline-block;
  left: 12rpx;
  bottom: 12rpx;
  width: calc(100% - 24rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #efb23d;
  font-size: 24rpx;
}

.categoriesFrame .categoryContent .item.list .itemTitle {
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 20rpx;
}

.categoriesFrame .categoryContent.list .btnViewMore {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #dd4d41;
  font-size: 30rpx;
  border-top: solid 2rpx #f5f5f5;
}
