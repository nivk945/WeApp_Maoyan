.pageTopBar {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 176rpx;
  z-index: 2147483647;
  background-color: rgba(221, 77, 65, 1);
}

/*
  类型选择选项卡
*/

.pageTopBar .typeTabFrame {
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 90rpx;
  line-height: 90rpx;
  transform: translate(-50%, 0);
  font-size: 0;
}

.pageTopBar .typeTabFrame .tab {
  display: inline-block;
  margin-left: 16rpx;
  margin-right: 16rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.6);
}

.pageTopBar .typeTabFrame .tab.select {
  color: #fff;
}

.pageTopBar .typeTabFrame .blockLine {
  position: absolute;
  bottom: 1px;
  width: 52rpx;
  height: 6rpx;
  transform: translate(-50%, 0);
  background: #fff;
  border-radius: 15rpx;
  transition: all linear 200ms;
}
